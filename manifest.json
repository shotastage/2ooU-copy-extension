{
    "manifest_version": 2,
    "name": "2oo Share URL Shortener",
    "version": "0.1.1",
    "description": "Shorten and share current web page URL",
    "browser_action": {
        "default_popup": "./build/popup.html",
        "default_icon": "icon.png"
    },
    "permissions": [
      "tabs",
      "clipboardRead",
      "clipboardWrite"
    ],
    "icons" : {
      "128": "icon.png"
    }
}
